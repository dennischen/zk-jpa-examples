<?link rel="stylesheet" type="text/css" href="/style.css"?>
<zk>
	<window apply="org.zkoss.bind.BindComposer" title="Form-base"
		viewModel="@id('vm') @init('org.zkoss.jpa.examples.m2m.M2MAssociation')"
		border="normal" hflex="1" vflex="1" contentStyle="overflow:auto">
		<hbox>
			<vbox form="@id('fx') @load(vm.category) @save(vm.category,before='update'))">
				<textbox value="@bind(fx.name)" />
				<listbox model="@bind(vm.availableItems)"
					selectedItems="@bind(fx.items)" multiple="true"
					checkmark="true">
					<template name="model">
						<listitem>
							<listcell label="@load(each.name)" />
						</listitem>
					</template>
				</listbox>
				<hlayout>
					<button label="update" onClick="@command('update')" />
					<button label="reload" onClick="@command('reload')" />
				</hlayout>
			</vbox>
			<vbox>
				<label value="@bind(vm.category.name)" />
				<listbox model="@bind(vm.category.items)">
					<template name="model">
						<listitem>
							<listcell label="@load(each.name)" />
						</listitem>
					</template>
				</listbox>
			</vbox>
		</hbox>
	</window>
</zk>
